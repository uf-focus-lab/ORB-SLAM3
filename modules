git submodule add -b master https://github.com/dorian3d/DBoW2.git thirdparty/DBoW2

[submodule "DBoW2"]
    branch = master
    path = thirdparty/DBoW2
    url = https://github.com/dorian3d/DBoW2.git

git submodule add -b master https://github.com/RainerKuemmerle/g2o.git thirdparty/g2o

[submodule "g2o"]
    branch = master
    path = thirdparty/g2o
    url = https://github.com/RainerKuemmerle/g2o.git

git submodule add --force -b main https://github.com/strasdat/Sophus.git thirdparty/Sophus

[submodule "Sophus"]
    branch = main
    path = thirdparty/Sophus
    url = https://github.com/strasdat/Sophus.git
